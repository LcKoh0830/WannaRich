<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="IncomeChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">5dp</item>
        <item name="chipBackgroundColor">@color/bg_color_chip_state</item>
        <item name="chipStrokeColor">@color/color_chip_state_income</item>
        <item name="android:textColor">@color/text_color_chip_state_income</item>
        <item name="chipIconTint">@color/color_chip_state_income</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="ExpenseChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">5dp</item>
        <item name="chipBackgroundColor">@color/bg_color_chip_state</item>
        <item name="chipStrokeColor">@color/color_chip_state_expense</item>
        <item name="android:textColor">@color/text_color_chip_state_expense</item>
        <item name="chipIconTint">@color/color_chip_state_expense</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

</resources>